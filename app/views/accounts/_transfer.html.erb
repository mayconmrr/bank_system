<%= form_tag({controller: "accounts", action: "transfer"}, method: "post") %>

  <div class="modal fade" id="transferModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
   
        </div>
        <div class="modal-body"> 
          <div class="form-group">
            <center><label>Valor do depósito</label></center>
             <%= text_field_tag :amount%> 
          </div> 
        </div> 

         <div class="modal-body"> 
          <div class="form-group">
            <center><label>Numero da Conta</label></center>
             <%= text_field_tag :account_recipient%> 
          </div> 
        </div> 

         <div class="modal-body"> 
          <div class="form-group">
            <center><label>Número da agência</label></center>
             <%= text_field_tag :recipient_id%> 
          </div> 
        </div> 

        <div class="modal-footer"> 
          <%= submit_tag "Transferir", class: "btn btn-primary" %>
        </div>
      </div>
    </div> 
  </div>
