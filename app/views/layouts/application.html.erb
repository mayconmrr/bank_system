<!DOCTYPE html>
<html>
  <head> 
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all',
                                              'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
 
  </head>
  <body> 
   
   <nav class="navbar navbar-fixed-top navbar-inverse" role="navigation">
    <span class='nav navbar-brand logo'><%= link_to "Banco GRP", root_path, class: "nav-link" %></span> 

    <ul class="nav navbar-nav pull-right">

      <% if logged_in? %>
      
        <li class="nav-item btn-group" data-behavior="notifications" data-notifications='<%= render template: "notifications/index", formats: [:json] %>'>
          <a class="dropdown-toggle nav-link" type="button" data-behavior="notifications-link" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= fa_icon "bell" %> <span data-behavior="unread-count"></span>
            </a>
          
          <div class="dropdown-menu" aria-labelledby="dropdownMenu1" data-behavior="notification-items">
          <!--
            <a class="dropdown-item" href="#">Action</a>
            <a class="dropdown-item" href="#">Another action</a>
            <a class="dropdown-item" href="#">Something else here</a>
           --> 
          </div>
        </li>
        <li class="nav-item"><%= link_to "UsuÃ¡rios", users_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "Meu Perfil", '#' %></li>
        <li class="nav-item"><%= link_to "Meus Dados", edit_user_path(current_user) %></li>
        <li class="nav-item"><%= link_to "Sair", logout_path, method: "delete" %></li> 
      <% else %>
        <li class="nav-item"><%= link_to "Cadastrar", signup_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "Login", login_path, class: "nav-link" %></li>
      <% end %>
    </ul>
  </nav>

<div class="container">
    <div class="container">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
      <%= yield %>  
    </div> 
</div>

  </body>
</html>
