<div class="container">
  <div id="signupbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title"><center><h3>Dados do cliente</h3></center></div>
      </div>
      <div class="panel-body">
        <%= form_with(model: user, local: true) do |form| %>
          <%= render 'shared/notifications', object: @user %>

          <div class="form-group">
            <%= form.label :nome, class:"col-md-3 control-label" %>
            <div class="col-md-9">
              <%= form.text_field :name, autofocus: true, class:"form-control", placeholder:"Nome completo" %>
            </div>
          </div>

          <div class="form-group">
            <%= form.label :sexo, class:"col-md-3 control-label" %>
            <div class="col-md-9">
              <%= form.select :gender, User::GENDER_TYPES, { prompt: "Selecione seu sexo" }, { class: "form-control"} %>
            </div>
          </div>

            <div class="form-group">
              <%= form.label :Email, class:"col-md-3 control-label" %>
              <div class="col-md-9">
                <%= form.email_field :email, class:"form-control", placeholder:"E-mail" %>
              </div>
            </div>

            <div class="form-group">
              <%= form.label :Senha, class:"col-md-3 control-label" %>
              <div class="col-md-9">
                <%= form.password_field :password, class:"form-control", placeholder:"Senha" %>
              </div>
            </div>

            <div class="form-group">
              <%= form.label :Confirmação_de_Senha, class:"col-md-3 control-label" %>
              <div class="col-md-9">
                <%= form.password_field :password_confirmation, class:"form-control", placeholder:"Confirmar senha" %>
              </div>
            </div>

            <div class="form-group">
            <!-- Button -->
              <div class="col-md-offset-3 col-md-9">
                <%= form.submit "Salvar", class:"btn btn-info" do %>
                  <i class="icon-hand-right"></i>&nbsp Sign Up
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
